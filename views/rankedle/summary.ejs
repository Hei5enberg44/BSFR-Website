                                            </div>
                                            <div class="col">
                                                <div class="fw-medium"><%= summary.season.firstTry.player.name %></div>
                                                <div class="text-secondary"><%= summary.season.firstTry.count %></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                            <!-- Nombre de victoires -->
                            <% if(summary.season.wins) { %>
