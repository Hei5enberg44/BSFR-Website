                                            </div>
                                            <div class="col">
                                                <div class="fw-medium"><%= summary.season.maxStreak.player.name %></div>
                                                <div class="text-secondary"><%= summary.season.maxStreak.count %></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                            <!-- Parties jou√©es -->
                            <% if(summary.season.played) { %>
