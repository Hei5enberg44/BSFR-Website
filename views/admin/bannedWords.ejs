<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/static/assets/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/static/assets/libs/tabler/style.min.css">
    <link rel="stylesheet" href="/static/assets/css/alert.css">
    <link rel="stylesheet" href="/static/assets/css/background.css">
    <link rel="stylesheet" href="/static/assets/libs/animate/animate.min.css">
    <title>Beat Saber FR - Mots bannis</title>
</head>
<body class="">
    <div class="background"><div class="blur"></div></div>

    <div class="page">
        <%- include('header') %>
        
        <div class="page-wrapper">
            <div class="container-xl">
                <!-- Page title -->
                <div class="page-header d-print-none">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <h2 class="page-title text-white">
                                Mots bannis
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="page-body">
                <div class="container-xl">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div id="table-banned-words" class="card">
                                    <div class="card-header">
                                        <div class="card-title">Liste des mots bannis</div>
                                    </div>
                                    <div class="card-body border-bottom py-3">
                                        <div class="d-flex">
                                            <div class="ms-auto text-muted">
                                                Rechercher:
                                                <div class="ms-2 d-inline-block">
                                                    <input type="search" class="form-control form-control-sm search">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <table class="table table-vcenter table-responsive m-0">
                                        <thead>
                                            <tr>
                                                <th><button class="table-sort" data-sort="sort-id">#</button></th>
                                                <th><button class="table-sort" data-sort="sort-word">Mot banni</button></th>
                                                <th><button class="table-sort" data-sort="sort-added-by">Ajouté par</button></th>
                                                <th><button class="table-sort desc" data-sort="sort-date">Date d'ajout</button></th>
                                            </tr>
                                        </thead>
                                        <tbody class="table-tbody">
                                            <% if(bannedWords.length === 0) { %>
                                            <tr>
                                                <td class="text-center" colspan="5">Aucun mot banni</td>
                                            </tr>
                                            <% } %>
                                            <% for(const word of bannedWords) { %>
                                            <tr>
                                                <td class="sort-id"><%= word.id %></td>
                                                <td class="sort-word"><%= word.word %></td>
                                                <td class="sort-added-by" data-added-by="<%= word.author.name %>">
                                                    <div class="d-flex align-items-center">
                                                        <span class="avatar avatar-sm me-2" style="background-image: url(<%= word.author.avatar %>)"></span>
                                                        <div class="flex-fill">
                                                            <%= word.author.name %>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="sort-date" data-date="<%= word.date.timestamp %>"><%= word.date.formated %></td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                    <% if(bannedWords.length > 0) { %>
                                    <div class="card-footer d-flex align-items-center border-0">
                                        <ul class="pagination m-0 ms-auto"></ul>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/static/assets/libs/tabler/script.min.js"></script>
    <script src="/static/assets/libs/list.js/list.min.js"></script>
    <script src="/static/assets/js/app.js"></script>
    <% if(bannedWords.length > 0) { %>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const list = new List('table-banned-words', {
                sortClass: 'table-sort',
                listClass: 'table-tbody',
                valueNames: [ 'sort-id', 'sort-word', { attr: 'data-added-by', name: 'sort-added-by' }, { attr: 'data-date', name: 'sort-date' } ],
                pagination: {
                    paginationClass: 'pagination',
                    innerWindow: 2,
                    item: '<li class="page-item"><a class="page-link" href="#"></a></li>'
                },
                page: 10
            })
        })
    </script>
    <% } %>
    <% if(login_success !== null) { %><script>showAlert(<%= login_success %>, '<%= login_success ? 'Connexion réussie' : 'Connexion échouée' %>')</script><% } %>
</body>
</html>